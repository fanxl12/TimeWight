<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_time"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:baselineAligned="false"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/main_tv_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="#ffffff"
                android:textSize="40sp" />

            <TextView
                android:id="@+id/main_tv_date"
                style="@style/tv_style"
                android:gravity="center" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:layout_marginRight="4dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_weather_icon"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:contentDescription="@string/weather_icon" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >
                
                <TextView
                    android:id="@+id/main_tv_weather"
                    style="@style/tv_style"
                    android:gravity="right" />
                
                <TextView
                    android:id="@+id/main_tv_wind"
                    style="@style/tv_style"
                    android:gravity="right"/>
                
                <TextView
                    android:id="@+id/main_day_temp"
                    style="@style/tv_style"
                    android:gravity="right"/>
                
                <TextView
                    android:id="@+id/main_tv_temp"
                    style="@style/tv_style"
                    android:gravity="right" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        
        <LinearLayout 
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            
            <ImageView
                android:id="@+id/future_one_icon"
                style="@style/iv_future_icon"
                android:contentDescription="@string/weather_icon"/>
            
            <TextView 
                android:id="@+id/future_one_text"
                style="@style/tv_future_style" />
        </LinearLayout>
        
        <LinearLayout 
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            
            <ImageView
                android:id="@+id/future_two_icon"
                style="@style/iv_future_icon"
                android:contentDescription="@string/weather_icon"/>
            
            <TextView 
                android:id="@+id/future_two_text"
                style="@style/tv_future_style" />
        </LinearLayout>
        
        <LinearLayout 
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            
            <ImageView
                android:id="@+id/future_three_icon"
                style="@style/iv_future_icon"
                android:contentDescription="@string/weather_icon"/>
            
            <TextView 
                android:id="@+id/future_three_text"
                style="@style/tv_future_style" />
        </LinearLayout>
        
        <LinearLayout 
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            
            <ImageView
                android:id="@+id/future_four_icon"
                style="@style/iv_future_icon"
                android:contentDescription="@string/weather_icon"/>
            
            <TextView 
                android:id="@+id/future_four_text"
                style="@style/tv_future_style" />
        </LinearLayout>
        
    </LinearLayout>
    
    <TextView 
        android:id="@+id/update_time_tips"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:textSize="12sp"
        android:paddingRight="4dp"
        android:textColor="#ffd54f"/>

</LinearLayout>